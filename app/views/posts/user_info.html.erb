<!--<h1><%=t("user_info")%></h1>-->
<br>
<div class="container" style="width:100%;background-color:white;padding:5%;">   
    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
        <div class="row" style="text-align:center">
            <h2><%=t("profile_picture")%></h2>
        </div>
        <hr>
        <div class="row" style="text-align:center;">
            <%=image_tag current_user.image.url(:medium)%>
        </div>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-7 col-lg-7">
        <table class="table">
        <tbody>
            <tr class="info">
                <td><label><%=t("name")%></label></td>
                <td><%=current_user.name%></td>
            </tr>
            <tr class="warning">
                <td><label><%=t("surname")%></label></td>
                <td><%=current_user.surname%> </td>
            </tr>
            <tr class="info">
                <td><label><%=t("email")%></label></td>
                <td><%=current_user.email%> </td>
            </tr>
            <tr class="warning">
                <td><label><%=t("last_sign_in_at")%></label></td>
                <td><%=current_user.last_sign_in_at%></td>
            </tr>
            <tr class="info">
                <td><label><%=t("last_sign_in_ip")%></label></td>
                <td><i style="color:blue"><%=current_user.last_sign_in_ip%></i></td>
            </tr>
            <tr class="warning">
                <td><label><%=t("current_sign_in_at")%></label></td>
                <td><%=current_user.current_sign_in_at%></td>
            </tr>
            <tr class="info">
                <td><label><%=t("current_sign_in_ip")%></label></td>
                <td><i style="color:red"><%=current_user.current_sign_in_ip%></i></td>
            </tr>
            <tr class="warning">
                <td><label><%=t("created_at")%></label></td>
                <td><%=current_user.created_at%></td>
            </tr>
            <tr class="info">
                <td><label><%=t("updated_at")%></label></td>
                <td><%=current_user.updated_at%></td>
            </tr>
        </tbody>
    </table>
    </div>
</div>





