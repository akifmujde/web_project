<%= form_for([@post, Comment.new], :remote=>'true', :controller => 'comments', :action => 'create') do |f| %>
<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6" style="padding:1%;display: inline;">
            <%= f.text_field :bdy, id: :comment_bdy, class:"form-control",style:"width:100%;" %>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6" style="padding:1.5%;">
        <input type="submit" name="commit" value="<%=t("s_comment")%>" style="border-radius:0;">
    </div>
</div>
<% end %>